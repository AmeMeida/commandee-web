---
import Titulo from '../Titulo.astro'
---

<form action="">
  <Titulo titulo="Entre em Contato!!!"/>
  <fieldset>
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" />
  </fieldset>
  <fieldset>
    <label for="email">Email:</label>
    <input type="email" name="email" id="name" />
  </fieldset>
  <fieldset>
    <textarea name="description" id="description" cols="50" rows="4" placeholder="Spill the tea"
    ></textarea>
  </fieldset>
  <button>Submit</button>
</form>

<style>
  form {
    background-color: var(--accent);
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }

  form h1{
    color: var(--primary);
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  textarea{
    resize: none;
  }
</style>
