---
import LayoutNav from "../layouts/LayoutNav.astro";
import MainHome from "../components/MainHome.astro";
import CardAjuda from "../components/CardAjuda.astro";
import CardInfo from "../components/CardInfo.astro";
import Titulo from "../components/Titulo.astro";
---

<LayoutNav title="Commandee">
  <MainHome />
  <main>
    <section>
      <Titulo titulo="Sobre o Commandee" />
      <article>
        <CardInfo
          title="Agilidade"
          body="Algum texto muito legala qui que eu não sei o que colocar então vai ficar assim lalalalal"
          alt="ilustracao"
          imagem="/ilustracao-info-relogio.svg"
        />
        <CardInfo
          title="Simplicidade"
          body="Algum texto muito legala qui que eu não sei o que colocar então vai ficar assim lalalalal"
          alt="ilustracao"
          imagem="/ilustracao-info-garcom.svg"
        />
        <CardInfo
          title="Dinamicidade"
          body="Algum texto muito legala qui que eu não sei o que colocar então vai ficar assim lalalalal"
          alt="ilustracao"
          imagem="/ilustracao-info-celular.svg"
        />
      </article>
    </section>

    <section>
      <Titulo titulo="Nossa Equipe" />
      <!--Card Time -->
    </section>

    <section>
      <CardAjuda />
    </section>
  </main>
</LayoutNav>

<style>
  main {
    background-color: var(--background);
  }

  section {
    flex-wrap: wrap;
    padding: 1.5rem;
    margin-bottom: 5rem;
  }

  section article {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  @media only screen and (max-width: 768px) {
    section{
      margin-bottom: 1rem;
    }

    section article {
      flex-direction: column;
    }
  }
</style>
