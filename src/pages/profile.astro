      <div
        class="block bg-purple-300 shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] rounded-3xl"
      >
        <div
          class="text-xl border-b-2 text-left px-6 py-3 bg-purple-400 border-neutral-500 rounded-3xl"
        >
          <!--dark:bg-neutral-700-->
          Perfil
        </div>
        <div class="p-6 bg-purple-300">
          <table class="table-auto">
            <tr>
              <th>Nome</th>
              <td>Fulano da Silva</td>
            </tr>
            <tr>
              <th>Nome de Usu√°rio</th>
              <td>User@3452</td>
            </tr>
            <tr>
              <th>Restaurante</th>
              <td>Restaurante X</td>
            </tr>
            <tr>
              <th>Telefone</th>
              <td>19 99999-3333</td>
            </tr>
          </table>
        </div>
      </div>
      <div
        class="block bg-purple-300 shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] rounded-b-3xl"
      >
        <div
          class="text-xl border-b-2 text-left px-6 py-3 bg-purple-400 border-neutral-500 rounded-3xl"
        >
          <!--dark:bg-neutral-700-->
          Email
        </div>
        <div class="p-6">
          <table class="table-auto rounded-full">
