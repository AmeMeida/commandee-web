---
import Layout from "../layouts/Layout.astro";
---

<style>

.filter-color{
  /*filter: invert(76%) sepia(33%) saturate(1116%) hue-rotate(356deg) brightness(99%) contrast(88%);*/
  filter: invert(79%) sepia(65%) saturate(407%) hue-rotate(337deg) brightness(97%) contrast(88%);
}

  table {
    width: 100%;
  }
  th {
    text-align: left;
  }
  td {
    text-align: right;
  }

  /* Inicio Style container */
  img {
    width: 70%;
    height: auto;
  }

  .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    padding: 2rem;
    text-align: center;
  }

  .coluna-esquerda {
    flex-direction: column;
    justify-content: center;
    padding: 0rem 2rem;
  }

  .coluna-direita {
    align-self: center;
  }

  .coluna-direita h1 {
    margin-bottom: 1rem;
  }

  .coluna-esquerda {
    display: flex;
    align-self: center;
    align-items: center;
    padding: 0rem 2rem;
  }

  @media screen and (max-width: 768px) {
    .container {
      grid-template-columns: 1fr;
    }

    .coluna-direita {
      align-items: center;
    }

    .coluna-esquerda {
      margin-bottom: 2rem;
      margin-left: 6rem;
      display: block;
    }
  }
  /* Final Style container */
</style>

